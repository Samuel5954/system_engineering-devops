#!/usr/bin/env bash
# This script loops 1 to 10 with specific messages for the 4th and 8th iterations

counter=1
while [ $counter -le 10 ]
do
    if [ $counter -eq 4 ]
    then
        echo "bad luck"
    elif [ $counter -eq 8 ]
    then
        echo "good luck"
    else
        echo "Best School"
    fi
    counter=$((counter + 1))
done
